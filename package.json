{
	"name": "@werp/ui",
	"version": "0.0.1-alpha.1",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/werpdev/ui.git"
	},
	"author": "reizt <reizt.dev@gmail.com>",
	"license": "MIT",
	"main": "./lib/cjs/index.js",
	"types": "./lib/types/index.d.ts",
	"module": "./lib/esm/index.mjs",
	"exports": {
		".": {
			"import": "./lib/esm/index.js",
			"require": "./lib/cjs/index.js",
			"types": "./lib/types/index.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"lib/cjs/**/*.js",
		"lib/esm/**/*.js",
		"lib/types/**/*.d.ts"
	],
	"scripts": {
		"dev": "BROWSER=none storybook dev -p 6006",
		"build": "run-s clean && run-p build.*",
		"clean": "rm -rf lib/*",
		"build.cjs": "tsc --project tsconfig.cjs.json",
		"build.esm": "tsc --project tsconfig.esm.json",
		"build.types": "tsc --project tsconfig.types.json",
		"format": "run-s format.*",
		"format.prettier": "prettier --write .",
		"format.eslint": "eslint --fix .",
		"check": "run-p check.*",
		"check.prettier": "prettier --check .",
		"check.eslint": "eslint .",
		"check.tsc": "tsc --incremental --noEmit"
	},
	"dependencies": {
		"@tabler/icons-react": "^3.5.0",
		"clsx": "^2.1.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@storybook/addon-controls": "^8.1.8",
		"@storybook/addon-themes": "^8.1.8",
		"@storybook/react": "^8.1.8",
		"@storybook/react-vite": "^8.1.8",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.13.0",
		"@typescript-eslint/parser": "^7.13.0",
		"autoprefixer": "^10.4.19",
		"eslint": "^8.57.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-react": "^7.34.2",
		"eslint-plugin-tailwindcss": "^3.17.3",
		"lefthook": "^1.6.10",
		"npm-run-all": "^4.1.5",
		"storybook": "^8.1.8",
		"tailwindcss": "^3.4.4",
		"typescript": "^5.4.5"
	}
}
